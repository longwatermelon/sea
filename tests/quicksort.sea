#include "../lib/quicksort.h"

fn main() -> int {
    let n:int = 6;
    let a:int* = stalloc(6, int);
    a[0]=5; a[1]=1; a[2]=4; a[3]=2; a[4]=8; a[5]=0;
    quicksort(a, n);

    let i:int = 0;
    let sum:int = 0;
    while (i<n) {
        sum = sum + a[i]*(i+1);
        i = i + 1;
    }
    return sum;
}

